<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TextView untuk judul halaman -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="25dp"
            android:text="Catatan"
            android:textColor="@color/gray_text"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Icon Kalender di pojok kanan atas -->
        <ImageView
            android:id="@+id/iconCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_calender"
            android:layout_marginStart="160dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textViewTitle"
            app:layout_constraintBottom_toBottomOf="@id/textViewTitle"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Icon Filter di pojok kanan atas, sejajar dengan kalender -->
        <ImageView
            android:id="@+id/iconFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_filter"
            app:layout_constraintBottom_toBottomOf="@id/textViewTitle"
            app:layout_constraintStart_toEndOf="@id/iconCalendar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Gambar Ilustrasi di tengah -->
        <ImageView
            android:id="@+id/illustrationImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/image_catatan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

        <!-- TextView untuk pesan di bawah ilustrasi -->
        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Belum ada catatan.\nBuat catatan anda sekarang"
            android:gravity="center"
            android:textColor="@color/gray_text"
            android:fontFamily="@font/poppins_light"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/illustrationImage" />

        <!-- FloatingActionButton di bawah kanan teks -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_add_catatan"
            android:backgroundTint="@color/red_button"
            app:tint="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewMessage"
            app:layout_constraintStart_toEndOf="@id/textViewMessage"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
