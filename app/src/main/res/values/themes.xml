<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TaskApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="BottomNavTextAppearance">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavTextAppearanceInactive">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextAppearanceInactive</item>
        <item name="itemIconTint">@color/gray_button</item>
        <item name="itemTextColor">@color/gray_button</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="cardForegroundColor">@color/white</item>
        <item name="android:background">@android:color/background_light</item>
    </style>

    <style name="Theme.TaskApp" parent="Base.Theme.TaskApp" />
</resources>
